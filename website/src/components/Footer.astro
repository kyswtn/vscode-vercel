---
import Logo from './Logo.astro'
import ToggleAppearance from './ToggleAppearance'
---

<footer class="py-7.5 sm:py-10 bg-gray-2 sm:bg-gray-1 border-t border-t-transparent sm:border-t-gray-6">
  <div class="max-w-7xl px-5 mx-auto flex flex-col-reverse sm:flex-col gap-5 sm:gap-0">
    <div class="flex flex-row items-center justify-start gap-[1ch] sm:justify-between">
      <div class="flex flex-row items-center gap-2.5">
        <Logo class="hidden sm:block" />
        <span class="text-gray-11">VS Code Vercel</span>
      </div>

      <div class="text-gray-11">&copy; 2024</div>
    </div>

    <div class="h-6"></div>

    <div class="w-full flex flex-col-reverse sm:flex-row items-start sm:items-center justify-between gap-10 sm:gap-0">
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-2.5 sm:gap-5 text-gray-11">
        <a
          target="_blank"
          href="https://marketplace.visualstudio.com/items?itemName=frenco.vscode-vercel"
          class="underline decoration-dotted underline-offset-5 hover:text-gray-12 transition-all duration-300"
        >
          <span>Visual Studio Marketplace</span><div class="inline-block align-middle i-radix-icons-external-link ml-1">
          </div>
        </a>
        <a
          target="_blank"
          href="https://vercel.com/marketplace/vscode"
          class="underline decoration-dotted underline-offset-5 hover:text-gray-12 transition-all duration-300"
        >
          <span>Vercel Marketplace</span><div class="inline-block align-middle i-radix-icons-external-link ml-1"></div>
        </a>
      </div>

      <ToggleAppearance client:idle />
    </div>
  </div>
</footer>
